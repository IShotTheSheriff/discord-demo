{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "outDir": "./lib",
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.d.ts"
  ],
  "include": [
    "src/**/*"
  ]
}